<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/meet_me</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/meet_me</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/meet_me</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/meet_me</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/meet_me</item>
    </style>

    <!-- 로그인 회원가입 TextField 스타일 지정 -->
    <style name="customMaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/primary_color</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="helperTextTextColor">@color/primary_color</item>
    </style>

    <!-- 버튼 정의 스타일 지정 -->
    <style name="customMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/meet_me</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primary_color</item>
    </style>

    <!-- 활성 상태 텍스트 스타일 -->
    <style name="BottomNavTextLargeActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 비활성 상태 텍스트 스타일 -->
    <style name="BottomNavTextLargeInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- IceCreamListFragment.xml -->
    <style name="TabTextStyle">
        <item name="android:textSize">14sp</item>  <!-- 텍스트 크기 -->
        <item name="android:fontFamily">@font/meet_me</item>  <!-- 폰트 패밀리 -->
        <item name="android:textStyle">bold</item>  <!-- 텍스트 굵게 -->
    </style>

    <!-- dialog_number_picker -->
    <style name="CustomNumberPickerStyle">
        <item name="android:textColor">#000000</item> <!-- 텍스트 색상 검정 -->
        <item name="android:textSize">50sp</item> <!-- 텍스트 크기 설정 -->
    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/AppAlertDialogTitle</item>
        <item name="android:buttonBarButtonStyle">@style/AppAlertButtonStyle</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppAlertDialogTitle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/meet_me</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppAlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">#FFFF00</item>
        <item name="android:colorPressedHighlight">@color/hint_color</item>
    </style>
</resources>